{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Muvel",
  "version": "2.3.0",
  "identifier": "com.muvel.app",
  "build": {
    "frontendDist": "../../client/build-tauri/client",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm --filter client dev:tauri",
    "beforeBuildCommand": "pnpm --filter client build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Muvel",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "dmg",
      "appimage",
      "deb",
      "apk"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null
    },
    "linux": {
      "category": "Utility"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["muvel"]
      }
    }
  },
  "tauri": {
    "android": {
      "package": {
        "name": "com.muvel.app"
      },
      "build": {
        "minSdkVersion": 26,
        "targetSdkVersion": 33
      }
    }
  }
}
